{
  "name": "webyousoon-website",
  "version": "1.0.0",
  "author": "Alvin BERTHELOT",
  "description": "Static generator of Webyousoon's website",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:html": "cross-env ELEVENTY_ENV=dev eleventy --serve --input=./src --output=./dist",
    "watch:css": "postcss ./src/styles/tailwind.css -o ./dist/index.css --watch",
    "build": "npm-run-all clean build:html build:css",
    "build:html": "cross-env ELEVENTY_ENV=prod eleventy --input=./src --output=./dist",
    "build:css": "postcss ./src/styles/tailwind.css -o ./dist/index.css",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvinberthelot/webyousoon-website.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alvinberthelot/webyousoon-website/issues"
  },
  "homepage": "https://github.com/alvinberthelot/webyousoon-website#readme",
  "dependencies": {
    "@11ty/eleventy": "0.10.0",
    "axios": "0.19.2",
    "html-minifier": "4.0.0",
    "tailwindcss": "1.2.0"
  },
  "devDependencies": {
    "cross-env": "7.0.2",
    "npm-run-all": "4.1.5",
    "postcss-cli": "7.1.0"
  }
}
