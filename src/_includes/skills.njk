<div class="grid grid-cols-8 mb-12">
  <div class="col-span-1"></div>
  <div class="col-span-7">
    <h3 class="text-4xl text-blue-200 uppercase">{{ skillsSection.title }}</h3>
  </div>

  <div class="col-span-1"></div>
  <div class="col-span-3">
    <p>{{ skillsSection.description }}</p>
  </div>
  <div class="col-span-1"></div>
  <div class="col-span-3">
    <ul>
      {%- for skill in skillsSection.skills %}
        <li>
          <div>
            <h4>{{ skill.title }}</h4>
            <ul class="list-square list-skills">
              {%- for subskill in skill.subskills %}
                <li>{{ subskill }}</li>
              {%- endfor %}
            </ul>
          </div>
        </li>
      {%- endfor %}
    </ul>
  </div>
</div>